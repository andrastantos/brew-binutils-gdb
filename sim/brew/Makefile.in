## COMMON_PRE_CONFIG_FRAG

dtbdir = $(datadir)/gdb/dtb

SIM_EXTRA_HW_DEVICES = brew_con brew_gpio

.cpp.o:
	$(COMPILE.CXX) $<
	$(POSTCOMPILE)

SIM_OBJS = \
	$(SIM_NEW_COMMON_OBJS) \
	interp.o \
	models.o \
	sim-resume.o

SIM_CSRC = $(SIM_NEW_COMMON_OBJS:.o=.c) \
	interp.o \
	sim-resume.o

SIM_CPPSRC = \
	models.cpp

SIM_EXTRA_LIBS = -lm -lz -lstdc++
SIM_EXTRA_INSTALL = install-dtb
SIM_EXTRA_CFLAGS = -DDTB="\"$(dtbdir)/brew-gdb.dtb\""

## COMMON_POST_CONFIG_FRAG

all: brew-gdb.dtb

brew-gdb.dtb: $(MAINT) brew-gdb.dts
	@echo Regenerating brew-gdb.dtb
	if test "x$(DTC)" != x; then \
	  $(DTC) -O dtb -o brew-gdb.dtb ${srcdir}/brew-gdb.dts || exit 1; \
	  $(SHELL) $(srcroot)/move-if-change brew-gdb.dtb ${srcdir}/brew-gdb.dtb || exit 1; \
	else \
	  echo "Could not update the brew-gdb.dtb file because the device "; \
	  echo "tree compiler tool (dtc) is missing.  Install the tool to "; \
	  echo "update the device tree blob."; \
	fi

install-dtb: brew-gdb.dtb
	$(SHELL) $(srcdir)/../../mkinstalldirs $(DESTDIR)$(dtbdir)
	$(INSTALL_DATA) $(srcdir)/brew-gdb.dtb $(DESTDIR)$(dtbdir)/brew-gdb.dtb
